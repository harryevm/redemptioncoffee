{%- style -%}
@font-face {
    font-family: 'Colus';
  src: url({{'Colus-Regular.woff2' | asset_url}}) format('woff2'),
    url({{'Colus-Regular.woff' | asset_url}}) format('woff'),
    url({{'Colus-Regular.eot' | asset_url}}) format('eot');
    font-weight: normal;
    font-style: normal;

}
@font-face {
    font-family: 'Bahnschrift';
  src: url({{'Bahnschrift.woff2' | asset_url}}) format('woff2'),
    url({{'Bahnschrift.woff' | asset_url}}) format('woff');
    font-weight: normal;
    font-style: normal;

}
  :root {
	 {% if settings.use_custom_font_head == false %}
      --typeHeaderPrimary: {{ settings.type_header_font_family.family }};
	  --typeHeaderFallback: {{ settings.type_header_font_family.fallback_families }};
	  --typeHeaderStyle: {{ settings.type_header_font_family.style }};
      {% else %}
      --typeHeaderPrimary: 'Colus';
	  --typeHeaderFallback: 'Colus';
	  --typeHeaderStyle: 'normal';
      {% endif %}
    --typeHeaderSize: {{ settings.type_header_base_size | default: 32 | append: 'px' }};
    --typeHeaderWeight: {{ settings.type_header_font_family.weight }};
    --typeHeaderLineHeight: {{ settings.type_header_line_height | default: 1.4 }};
    --typeHeaderSpacing: {{ settings.type_header_spacing | default: '25' | divided_by: 1000.00 | append: 'em' }};

	  {% if settings.use_custom_font_body == false %}
      --typeBasePrimary:{{ settings.type_base_font_family.family }};
	  --typeBaseFallback:{{ settings.type_base_font_family.fallback_families }};
      --typeBaseStyle: {{ settings.type_base_font_family.style }};
      {% else %}
      --typeBasePrimary: 'Bahnschrift';
	  --typeBaseFallback:'Bahnschrift';
      --typeBaseStyle: 'normal';
      {% endif %}
    
    --typeBaseSize: {{ settings.type_base_size | default: 16 | append: 'px' }};
    --typeBaseWeight: {{ settings.type_base_font_family.weight }};
    --typeBaseSpacing: {{ settings.type_base_spacing | default: '50' | divided_by: 1000.00 | append: 'em' }};
    --typeBaseLineHeight: {{ settings.type_base_line_height | default: 1.6 }};

    {% if settings.button_style == 'round-slight' %}
      --buttonRadius: 3px;
    {% elsif settings.button_style == 'round' %}
      --buttonRadius: 35px;
    {% else %}
      --buttonRadius: 0px;
    {% endif %}

    --iconWeight: {{ settings.icon_weight | default: '5px' }};
    --iconLinecaps: {{ settings.icon_linecaps | default: 'miter' }};
  }

  {% if settings.color_cart_dot == settings.color_button %}
    .site-nav__thumb-cart {
      border-left: 1px solid rgba(255,255,255,0.3);
    }
  {% endif %}

  .hero {
    background-image: linear-gradient(100deg, {{ settings.color_large_image_bg }} 40%, {{ settings.color_large_image_bg | color_lighten: 13 }} 63%, {{ settings.color_large_image_bg }} 79%);
  }

  .placeholder-content,
  .image-wrap,
  .skrim__link,
  .pswp__img--placeholder {
    background-image: linear-gradient(100deg, {{ settings.color_small_image_bg }} 40%, {{ settings.color_small_image_bg | color_darken:
    3 }} 63%, {{ settings.color_small_image_bg }} 79%);
  }
{%- endstyle -%}
